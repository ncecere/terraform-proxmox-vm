# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
# Set default charset
charset = utf-8

# Set default line ending
end_of_line = lf

# Indentation style
indent_style = space
indent_size = 2

# Trim trailing whitespace
trim_trailing_whitespace = true

# Insert a final newline
insert_final_newline = true

# Specify Terraform files
[*.tf]
indent_size = 2

[*.tfvars]
indent_size = 2

# Set specific rules for markdown files
[*.md]
trim_trailing_whitespace = false